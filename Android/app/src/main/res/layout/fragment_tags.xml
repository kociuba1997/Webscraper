<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.androidx.com/tools"
        android:layout_width="match_parent"
        android:paddingTop="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <EditText
            android:id="@+id/addTagEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="tag"
            app:layout_constraintEnd_toStartOf="@id/addTagButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/addTagButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="dodaj"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/addTagEditText"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/popularTag1TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="3"
            android:textSize="12sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="4dp"
            android:background="@drawable/rounded_frame_gray"
            android:text="dziendobry"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/tagsRecyclerView"
            app:layout_constraintEnd_toStartOf="@+id/popularTag2TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addTagButton"/>

    <TextView
            android:id="@+id/popularTag2TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="3"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_frame_gray"
            android:text="stilon"
            android:padding="4dp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/popularTag3TextView"
            app:layout_constraintStart_toEndOf="@+id/popularTag1TextView"
            app:layout_constraintBottom_toTopOf="@+id/tagsRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/addTagButton"/>

    <TextView
            android:id="@+id/popularTag3TextView"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="3"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:padding="4dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_frame_gray"
            android:text="chrobry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/popularTag2TextView"
            app:layout_constraintTop_toBottomOf="@+id/addTagButton"
            app:layout_constraintBottom_toTopOf="@+id/tagsRecyclerView"/>

    <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="popularTag3TextView, popularTag2TextView, popularTag1TextView"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tagsRecyclerView"
            android:layout_width="match_parent"
            app:layout_goneMarginTop="16dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier"
            tools:listitem="@layout/item_news_list" android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>